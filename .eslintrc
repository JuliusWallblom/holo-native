{
  "root": true,
  "extends": "@react-native",
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "env": {
        "jest": true
      },
      "plugins": ["jest"],
      "rules": {
        "jest/valid-expect": "off"
      }
    }
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "never"]
  }
}
